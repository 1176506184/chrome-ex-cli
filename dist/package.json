{
    "name": "chrome-ex-cli",
    "version": "1.0.8",
    "description": "一个现代化的 Chrome 扩展开发工具",
    "main": "dist/src/create.js",
    "bin": {
        "chrome-ex": "./dist/bin/index.js"
    },
    "preferGlobal": true,
    "files": [
        "dist",
        "templates",
        "package.json",
        "README.md"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsc && tsc-alias && npm run copy-templates",
        "copy-templates": "copyfiles -u 0 templates/**/* dist/",
        "watch": "tsc -w",
        "prepublishOnly": "npm run build"
    },
    "devDependencies": {
        "@types/commander": "^2.12.0",
        "@types/fs-extra": "^11.0.4",
        "@types/inquirer": "^9.0.9",
        "@types/node": "^25.0.3",
        "copyfiles": "^2.4.1",
        "tsc-alias": "^1.8.16"
    },
    "dependencies": {
        "chalk": "^5.6.2",
        "commander": "^14.0.2",
        "fs-extra": "^11.3.3",
        "inquirer": "^13.1.0"
    }
}
